<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical">
    
    <RelativeLayout
        android:id="@+id/layout_areaIntroduce"
		android:layout_width="300dp"
	    android:layout_height="300dp"
	    android:background="@drawable/bg_area_introduce"
	    android:layout_centerHorizontal="true" 
	    android:gravity="center_horizontal"
        >
		    <TextView
		        android:id="@+id/txtView_areaIntroduce"
		        android:layout_width="280dp"
		        android:layout_height="280dp"
		        android:background="@drawable/logo_md"
		        android:layout_centerVertical="true"
		        android:layout_centerHorizontal="true"
		        />
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgView_baseline"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/baseline"
        android:layout_below="@+id/layout_areaIntroduce"
        android:layout_marginTop="20dp" />
    
    <LinearLayout
        android:id="@+id/layout_twoButton_go_stroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView_baseline"
        android:layout_marginTop="20dp" 
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >
        
        <Button
            android:id="@+id/btn_area_go"
            android:layout_width="150dp"
            android:layout_height="197dp"
            android:background="@drawable/button_area_go"
            />
        
        <Button
            android:id="@+id/btn_area_stroll"
            android:layout_width="150dp"
            android:layout_height="197dp"
            android:background="@drawable/button_area_stroll"
            
            />
        
    </LinearLayout>

</RelativeLayout>
